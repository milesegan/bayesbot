<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
          PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
          "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>bayesbot</display-name>
  <description>naive bayesian classifier as a web service</description>

  <servlet>
    <servlet-name>BayesServlet</servlet-name>
    <description>the main app servlet</description>
    <servlet-class>bayesbot.BayesServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>BulkLoad</servlet-name>
    <description>bulk loader servlet</description>
    <servlet-class>bayesbot.BulkLoadServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BulkLoad</servlet-name>
    <url-pattern>/bulk-load/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>BayesServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
