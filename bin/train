#!/usr/bin/env ruby
# bulk-loads a dataset from a text file

$: << File.join(File.dirname(__FILE__), "..", "lib")

require 'redis'
require 'datafile'
require 'bayes'
require 'json'

file = DataFile.new(ARGV.first)

r = Redis.new
r.flushall

file.each { |klass,features|
  r.hincrby "classes", klass, 1
}


